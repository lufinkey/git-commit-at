#!/bin/bash

sudoargs=
if [ -n "$DISPLAY" ]
then
	askpass_path=$(which ssh-askpass)
	if [ -z "$askpass_path" ]
	then
		>&2 echo "ssh-askpass is not installed; you must install this yourself"
		exit 1
	fi
	export SUDO_ASKPASS="$aspass_path"
	sudoargs='-A -p "You must enter your password to set up the no-internet tool"'
fi

# Create group
if [ -z "$(getent group no-internet | cut -d: -f3)" ]
then
	>&2 echo "System group \"no-internet\" does not exist. Creating..."
	sudo $sudoargs groupadd --system no-internet
fi

# Add current user to group
if ! id -Gn luis | grep '\bno-internet\b' &> /dev/null
then
	>&2 read -p "user $USER is not added to the no internet group. Add? [y|n]: " prompt
	if [ "$prompt" != "y" ]
	then
		exit 1
	fi
	sudo $sudoargs adduser "$USER" no-internet
fi

# Create network script
network_script_path="/etc/network/if-pre-up.d/iptables_no-internet_rule"
if [ ! -f "$network_script_path" ]
then
	network_script=$(cat <<EOF
#!/bin/bash
iptables -A OUTPUT -m owner --gid-owner no-internet -j DROP
EOF
)
	>&2 echo "Network script does not exist. Creating..."
	echo "$network_script" | sudo tee "$network_script_path" &> /dev/null
	sudo $sudoargs chmod +x "$network_script_path"
	sudo $sudoargs "$network_script_path"
fi

# Build argument string
args=""
arg_counter=1
while [ $arg_counter -le $# ]
do
	arg=${!arg_counter}
	esc_arg=$(printf "%q" "$arg")
	if [ -z "$args" ]
	then
		args="$esc_arg"
	else
		args="$args $esc_arg"
	fi
	arg_counter=$((arg_counter+1))
done

sg no-internet -c "$args"
exit $?
